{
  "name": "care-of-cars-backend",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node   --loader ts-node/esm --test test/**/*.test.ts",
    "start": "npm run build:ts && node dist/index.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "generate": "drizzle-kit generate:pg --config=src/config/drizzle.config.ts",
    "deployDocker": "npm run build:ts &&  node dist/index.js",
    "drizzle-studio": "npx drizzle-kit studio --config=src/config/drizzle.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/env": "^4.3.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@sinclair/typebox": "^0.32.15",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.29.4",
    "drizzle-typebox": "^0.1.1",
    "eslint": "^8.57.0",
    "fastify": "^4.26.1",
    "fastify-cli": "^6.1.1",
    "fastify-plugin": "^4.0.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@fastify/pre-commit": "^2.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.4.4",
    "@types/pg": "^8.11.2",
    "c8": "^9.0.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "fastify-tsconfig": "^2.0.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "pre-commit": {
    "run": ["build:ts"],
    "silent": false
  }
}

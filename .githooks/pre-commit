echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
echo "DDDDDDDDDDDDDDDDDDDDDDDDDDD"
# Run tests
 docker-compose up --abort-on-container-exit test postgres 
test_status=$?

# Stop and remove containers
docker-compose down

if [ $test_status -ne 0 ]; then
    echo "Tests failed. Commit aborted."
    exit 1
fi

exit 0

